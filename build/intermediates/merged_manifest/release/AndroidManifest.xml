<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.becomedigital.sdk.identity.becomedigitalsdkiv.mb"
    android:versionCode="2"
    android:versionName="4.6.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="31" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.front" />
    <uses-feature android:name="android.hardware.camera.front.autofocus" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="false" >
    </uses-feature>

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher_bcdi"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_bcdi_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.becomedigital.sdk.identity.becomedigitalsdkiv.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.becomedigital.sdk.identity.becomedigitalsdk.StartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.becomedigital.sdk.identity.becomedigitalsdk.MainBDIV"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.microblink.activity.DocumentScanActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.microblink.activity.LegacyDocumentVerificationActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.microblink.activity.BlinkIdActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensor" >
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.becomedigital.sdk.identity.becomedigitalsdkiv.mb.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>